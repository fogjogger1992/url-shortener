<div class="container d-flex h-100">
  <div class="col-lg-8 m-auto">
    <div class="bg-white p-5 rounded shadow">
      <div class="row pb-4 justify-content-center">
        <h3>URL Shortener</h3>
      </div>

      <form action="/shortenURL" method="POST">
        <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4">
          <div class="input-group">
            <input name="inputURL" type="url" placeholder="Input URL here..." value="{{ inputURL }}" required
              class="form-control border-0 bg-light">
            <div class="input-group-submit">
              <button type="submit" class="btn btn-link-dark"><i class="fas fa-greater-than"></i></button>
            </div>
          </div>
        </div>
        {{#if error}}
        <div class="text-danger p-1 mb-4" role="alert">
          {{ error }}
        </div>
        {{/if}}
      </form>

      <div class="form-group p-1 bg-light rounded rounded-pill shadow-sm mb-4">
        <div class="input-group">
          <input type="url" placeholder="You'll get a shortened URL here..." value="{{ outputURL }}"
            class="form-control border-0 bg-light" disabled>
          <div class="input-group-append">
            <button type="submit" class="btn btn-link-dark"><i class="fas fa-clipboard"></i></button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>